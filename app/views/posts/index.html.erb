<div class="posts-wrapper">
  <% @posts.each do |post| %>
    
    <div class="post">
      <div class="post-head">
        <div class="name">
          <p>Jason Dudley</p>
        </div>
      </div>
      <div class="image-center">
         <%= link_to (image_tag post.image.url(:medium), class: 'image-responsive'), post_path(post) %>
      </div>
      <div class="caption">
        <%= post.caption %>
      </div>
    </div>
  <% end %>
</div>
